{% extends 'baseadmin.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="product_back">
    <h1>Produits</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Nom produit</th>
                <td>{{ product.nameProduct }}</td>
            </tr>
            <tr>
                <th>Description produit</th>
                <td>{{ product.descriptionProduct }}</td>
            </tr>
            <tr>
                <th>Prix produit</th>
                <td>{{ product.priceProduct }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('uploads/photo/' ~ product.photoProduct ) }}" class="photoback" alt="collier"></td>
            </tr>
        </tbody>
    </table>
<div class="btn_back">
    <a class="btn btn-lg btn-primary btn_co prod" href="{{ path('app_products_index') }}">Retour</a>

    <a class="btn btn-lg btn-primary btn_co prod" href="{{ path('app_products_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('products/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
